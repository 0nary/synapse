@namespace Synapse.Dashboard

@if(Event != null)
{
    <table class="table table-striped">
    <tbody>
        <tr>
            <td>Name</td>
            <td><input name="@nameof(Event.Name)" type="text" required placeholder="Event name" class="form-control" value="@Event.Name"
                @onchange="async e => await OnPropertyChanged(nameof(Event.Name), ed => ed.Name = (string)e.Value!)" /></td>
        </tr>
        <tr>
            <td>Kind</td>
            <td>
                <select name="@nameof(Event.Kind)" required class="form-control bg-secondary text-white" 
                @onchange="async e => await OnPropertyChanged(nameof(Event.Kind), ed => { ed.Kind = EnumHelper.Parse<EventKind>((string)e.Value!); })">
                    @foreach (EventKind eventKind in Enum.GetValues(typeof(EventKind)))
                    {
                        var eventKindStr = @EnumHelper.Stringify(eventKind);
                        <option value="@eventKindStr" selected="@(Event.Kind == eventKind)">@eventKindStr</option>
                    }
                </select>
           </td>
        </tr>
        <tr>
            <td>Source</td>
            <td><input name="@nameof(Event.Source)" type="url" placeholder="Cloud event source" title="The source attribute of the cloud event to match. Supports regular expressions." class="form-control" value="@Event.Source"
                @onchange="async e => await OnPropertyChanged(nameof(Event.Source), ed => ed.Source = (string)e.Value!)" /></td>
        </tr>
        <tr>
            <td>Type</td>
            <td><input name="@nameof(Event.Type)" type="text" placeholder="Cloud event type" title="The type attribute of the cloud event to match. Supports regular expressions." class="form-control" value="@Event.Type"
                @onchange="async e => await OnPropertyChanged(nameof(Event.Type), ed => ed.Type = (string)e.Value!)" /></td>
        </tr>
        <tr>
            <td colspan="2">Correlations</td>
        </tr>
        <tr>
            <td colspan="2">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Attribute name</th>
                            <th>Attribute value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Event.Correlations != null)
                        {
                            foreach(var correl in Event.Correlations)
                            {
                                <ExpandableDataRow>
                                    <Header>
                                        <td>@correl.ContextAttributeName</td>
                                        <td>@correl.ContextAttributeValue</td>
                                    </Header>
                                    <Body>
                                        <td colspan="2">
                                            <table class="table table-striped">
                                                <tbody>
                                                    <tr>
                                                        <td>Attribute name</td>
                                                        <td><input type="text" value="@correl.ContextAttributeName" required placeholder="Cloud event context attribute name" title="The name of the context attribute used to correlate cloud events. Supports regular expressions." class="form-control"
                                                            @onchange="async e => await OnPropertyChanged(nameof(Event.Correlations), ed => correl.ContextAttributeName = (string)e.Value!)"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Attribute value</td>
                                                        <td><input type="text" value="@correl.ContextAttributeValue" placeholder="Cloud event context attribute value" title="The value of the context attribute used to correlate cloud events. Supports runtime expressions" class="form-control"
                                                            @onchange="async e => await OnPropertyChanged(nameof(Event.Correlations), ed => correl.ContextAttributeValue = (string)e.Value!)"/></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </Body>
                                </ExpandableDataRow>
                            }
                        }
                    </tbody>
                </table>
                <button class="btn btn-block btn-primary text-white w-100" @onclick="@(async () => await OnPropertyChanged(nameof(Event.Correlations), ed => { if(ed.Correlations == null) ed.Correlations = new(); ed.Correlations.Add(new() { ContextAttributeName = "undefined" }); }))">Add new correlation</button>
            </td>
        </tr>
    </tbody>
</table>
}

@code {

    [Parameter] public EventDefinition? Event { get; set; }

    [Parameter] public EventCallback<EventDefinition?> OnChange { get; set; }

    protected virtual async Task OnPropertyChanged(string property, Action<EventDefinition> patch)
    {
        if (this.Event == null)
            return;
        patch(this.Event);
        await this.OnChange.InvokeAsync(this.Event);
        this.StateHasChanged();
    }

}
